{
  "AllowedHosts": "*",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Debug": {
      "LogLevel": {

      }
    },
    "Console": {
      "LogLevel": {

      },
      "FormatterName": "json",
      "FormatterOptions": {
        "IncludeScopes": true,
        "UseUtcTimestamp": true,
        "TimestampFormat": "yyyy-MM-ddTHH:mm:ss.fffZ",
        "JsonWriterOptions": {
          "Indented": true,
          "SkipValidation": true
        }
      }
    },
    "File": {
      "LogLevel": {

      },
      "FormatterName": "json",
      "Path": "Logs",
      "RollingInterval": "Day",
      "FormatterOptions": {
        "IncludeScopes": true,
        "UseUtcTimestamp": true,
        "TimestampFormat": "yyyy-MM-ddTHH:mm:ss.fffZ",
        "JsonWriterOptions": {
          "Indented": true,
          "SkipValidation": true
        }
      }
    }
  }
}
